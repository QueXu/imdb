<div id="<%= dom_id movie %>">
  <div style="column-container">
    <div class="flex-items">
      <%= image_tag(movie.poster, class: "message-image", size: "300") %>
    </div>

    <div class="flex-items">
      <strong>
        <%= movie.title %>
      </strong>
    </div>
    <div class="is-flex">
      <% if action_name == "index"%>
        <% if current_user %>
          <%= render "movies/ratings/star_rating", movie: movie %>
        <% end %>
      <% end %>
      <% if action_name == "show"%>
        <%= render "movies/ratings/average_rating"  %>
      <% end %>
    </div>
  </div>
</div>
